    <DisplayName>Credential Post Call</DisplayName>
    <FaultRules/>
    <Properties/>
    <Request clearPayload="false" variable="servicecallout.request">
        <Set>
            <Headers>
                <Header name="Authorization">{request.header.Authorization}</Header>
            </Headers>
            <Payload>
                {request.content}
            </Payload>
            <Verb>POST</Verb>
            <Path>/edgemicro/credential/organization/{organization.name}/environment/{environment.name}</Path>
        </Set>
        <IgnoreUnresolvedVariables>false</IgnoreUnresolvedVariables>
    </Request>
    <Response>credentialResponse</Response>
    <HTTPTargetConnection>
        <Properties/>
        <URL>https://edgemicroservices.apigee.net</URL>
    </HTTPTargetConnection>
